### Custom bindings.
# MPD commands.
set $mpd_host localhost
bindsym Ctrl+$mod_alt+l     exec mpc -h $mpd_host next
bindsym Ctrl+$mod_alt+h     exec mpc -h $mpd_host prev
bindsym Ctrl+$mod_alt+k     exec mpc -h $mpd_host volume +5
bindsym Ctrl+$mod_alt+j     exec mpc -h $mpd_host volume -5
bindsym Ctrl+$mod_alt+space exec mpc -h $mpd_host toggle
bindsym Ctrl+$mod_alt+s     exec mpc -h $mpd_host stop
